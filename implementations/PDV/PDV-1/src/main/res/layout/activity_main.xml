<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PDV Server"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PDV Server Status: Unknown"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Server"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop Server"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textPortLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server Port:"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/seekbarPort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="1000"
            android:progress="777" />

        <TextView
            android:id="@+id/textPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7777"
            android:textSize="16sp"
            android:minWidth="50dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkboxAutoStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto-start PDV Server on boot"
        android:layout_marginBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textServerUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server URL: http://127.0.0.1:7777"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginBottom="16dp" />

</LinearLayout>
