<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@android:color/darker_gray">

            <ImageView
                android:id="@+id/pdv_status_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="PDV Status" />

            <TextView
                android:id="@+id/pdv_status_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Checking PDV connection..."
                android:textSize="14sp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <TextView
            android:id="@+id/consent_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/consent_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="4dp" />

        <TextView
            android:id="@+id/consent_grants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:lineSpacingExtra="6dp" />

        <TextView
            android:id="@+id/accessibility_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#D32F2F"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:background="#FFEBEE"
            android:lineSpacingExtra="4dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/enable_accessibility_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Accessibility Service"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:backgroundTint="#FF6F00" />

        <Button
            android:id="@+id/consent_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept Consent"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/consent_decline_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/consent_status_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Consent Status"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:enabled="false" />

        <Button
            android:id="@+id/regenerate_key_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regenerate Key Pair"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/debug_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Exposure Events (Debug)"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/darker_gray" />

        <Button
            android:id="@+id/video_recording_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Recording"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#D32F2F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:spacing="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interval:"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/screenshot_interval_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:spacing="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Screenshot Capture"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/screenshot_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:spacing="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Record Accessibility Events"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/accessibility_recording_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
